    </div> %>
    
   
    <div class = "list">
      <% @events.each do |event| %>
        <%# <% if current_user.id == event.user_id %> 
          <ul class= "list-list"> 
            <li class='show-list'>  

                    <div class='item-info'>
                      <h3 class='event-name'>
                        <%= link_to event.theme, event_path(event.id), method: :get %>    
                      </h3>

                      <div class='event2-time'>
                        <br>
                          <b> Time : </b><%=  event.date%>    
                            
                          ( <%= event.start_at.strftime( "%H:%M" ) %>
                            〜
                          <%= event.finish_at.strftime( "%H:%M" ) %> )
                        <br>
                      </div>
                      <b>members: </b><%= event.liked_users.count %> people 

                      <% if current_user == event.user %>
                        <%= link_to "( see 👀 )",event_path(event.id) %>
                      <% end%>
                    </div>   
            </li>
          </ul>
        <%# <% end %>   
      <% end %> 
      <div class = "example2">
        <%= "Plan an event 📆 !"%>
      </div>
