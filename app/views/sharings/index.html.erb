<div class="SharePage">
    <div class= "Account__info">

      <h1>SharePage </h1>

      <div class="Account_link">
        <% if user_signed_in? %>
      
            <%= link_to '⇨ MyPage', items_path(current_user), class: "share4"%>
            or
            <%= link_to '🍻 EventPage 🍻', events_path, class: "share2"%>
          
          
            <%= link_to '⇨ Logout', destroy_user_session_path, method: :delete, class: "logout" %>
          
        <% else %>
          <ul>
          <li><%= link_to '⇩ Login', new_user_session_path, class: "login" %></li>
          <li><%= link_to '⇩ New Registration', new_user_registration_path, class: "sign-up" %></li>
          </ul>
        <% end %>
      </div>

    </div>
      
  
  
 
  <div class='item1-contents'>
    <%# <div class="item__info"> %>
      <%# <h6>  Welcome back , <b><%= link_to current_user.name, user_path(current_user)</b> ! </h6> %>

    <%# </div> %>
   
      <div class = "list-list-list">
        <% @items.each do |item| %>
          <ul class= "list-list"> 
            <li class='show-list'>  

              <div class='item-info'>
                <h3 class='item-name'>
                  <%= link_to item.title, item_path(item.id), method: :get %>  
                </h3>
                  <div class='item-img-content'>
                    <%= image_tag item.image, class: "item-img" if item.image.attached?%>
                  </div>

                  💖: <%= item.iine_users.count %> 
                            <% if current_user == item.user %>
                              <%= link_to "( see 👀 )",item_path(item.id) %>
                            <% end%>
                
                <ul class="more_list">
                  <% if user_signed_in? %>          
                    <% if current_user == item.user %>  
                      <div class = "edit1-destroy1">
                        <%= link_to "📝", edit_item_path(item.id), method: :get, class: "item-edit" %> or <%= link_to "DELETE ❌", item_path(item.id), method: :delete, class:"item-destroy" %>
                      </div>
                    <% end %> 
                  <% end %> 
                </ul>  

              </div>   
            </li>
          </ul> 
        <% end %>  

        <div class="example">
          <b><br><%= "Let's post 📸 !" %></b><br>
        </div>
          <ul class= "list-list"> 
              <li class='show-list'>  

                        <div class='item-info'>
                          <h3 class='item-name'>
                            <%= link_to "ex: とうそんの醤油ラーメン","#"%>    
                          </h3>
                            <div class='item-img-content'>
                              <%= image_tag "ramen-intro02.png", class: "item-img" %>
                            </div> 
                        </div>   
              </li>
          </ul> 
      </div>   

        
      <div class="entry-form">
        <%= link_to ' + Share ramen 🍜', new_item_path(current_user) %>
      </div>

  </div>


  

 
</div>